<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.e2esp.nestleironcalculator">

    <application
        android:name="com.e2esp.nestleironcalculator.applications.NestleIronCalculatorApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity"
            android:theme="@style/CustomTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name="com.e2esp.nestleironcalculator.activities.AgeSelectionActivity"
            android:theme="@style/CustomTheme"
            android:parentActivityName="com.e2esp.nestleironcalculator.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.e2esp.nestleironcalculator.activities.AgeSelectionActivity" />
        </activity>

    </application>
</manifest>