<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.MainActivity">

    <ScrollView
        android:id="@+id/ScrollViewID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true">

        <LinearLayout
            android:id="@+id/parentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/yellow"
                android:orientation="vertical"
                android:padding="@dimen/margin_small">

                <LinearLayout
                    android:id="@+id/mainlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:background="@drawable/shape"
                    android:orientation="vertical"
                    android:paddingLeft="5dip">

                    <ImageView
                        android:id="@+id/bo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bo_main" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sublayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mainlayout"
                    android:layout_gravity="left|center"
                    android:background="@color/yellow"
                    android:orientation="horizontal"
                    android:paddingLeft="5dip">

                    <ImageView
                        android:id="@+id/bullet1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingBottom="@dimen/padding_top"
                        android:paddingTop="@dimen/padding_top"
                        android:src="@drawable/intro_overlay_list_bullet" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_tiny"
                        android:paddingBottom="@dimen/padding_top"
                        android:paddingTop="@dimen/padding_top"
                        android:text="@string/welcome__iron_deficiency_cause_of_anemia"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sublayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sublayout1"
                    android:layout_gravity="left|center"
                    android:background="@color/yellow"
                    android:orientation="horizontal"
                    android:paddingLeft="5dip">

                    <ImageView
                        android:id="@+id/bullet2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingBottom="@dimen/padding_top"
                        android:paddingTop="@dimen/padding_top"
                        android:src="@drawable/intro_overlay_list_bullet" />

                    <TextView
                        android:id="@+id/textViewNeedsMoreIron"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_tiny"
                        android:paddingBottom="@dimen/padding_top"
                        android:paddingTop="@dimen/padding_top"
                        android:text="@string/welcome__baby_needs_more_iron_than_you"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sublayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sublayout2"
                    android:layout_gravity="left|center"
                    android:background="@color/yellow"
                    android:orientation="horizontal"
                    android:paddingLeft="5dip">

                    <ImageView
                        android:id="@+id/bullet3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingBottom="@dimen/padding_top"
                        android:paddingTop="@dimen/padding_top"
                        android:src="@drawable/intro_overlay_list_bullet" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_tiny"
                        android:paddingBottom="@dimen/padding_top"
                        android:paddingTop="@dimen/padding_top"
                        android:text="@string/welcome__iron_important_for_cognitive_development"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sublayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sublayout3"
                    android:layout_gravity="left|center"
                    android:background="@color/yellow"
                    android:orientation="horizontal"
                    android:paddingLeft="5dip">

                    <ImageView
                        android:id="@+id/bullet4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingBottom="@dimen/padding_top"
                        android:paddingTop="@dimen/padding_top"
                        android:src="@drawable/intro_overlay_list_bullet" />

                    <TextView
                        android:id="@+id/textViewNeedsIronDaily"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_tiny"
                        android:paddingBottom="@dimen/padding_top"
                        android:paddingTop="@dimen/padding_top"
                        android:text="@string/welcome__baby_needs_iron_daily"
                        android:textColor="@color/black" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_small"
                android:paddingLeft="@dimen/margin_small"
                android:paddingRight="@dimen/margin_small">

                <LinearLayout
                    android:id="@+id/layout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="5dip">

                    <TextView
                        android:id="@+id/textViewCheckIronIntake"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingBottom="@dimen/padding_top"
                        android:paddingTop="@dimen/padding_top"
                        android:text="@string/welcome__check_your_babys_intake"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout2"
                    android:layout_gravity="left|center"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="5dip">

                    <TextView
                        android:id="@+id/dot1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/solid_circle"
                        android:text="1"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_tiny"
                        android:paddingBottom="@dimen/padding_top"
                        android:paddingTop="@dimen/padding_top"
                        android:text="@string/welcome__select_babys_age"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout3"
                    android:layout_gravity="left|center"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="5dip">

                    <TextView
                        android:id="@+id/dot2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/solid_circle"
                        android:text="2"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_tiny"
                            android:paddingBottom="@dimen/padding_top"
                            android:paddingTop="@dimen/padding_top"
                            android:text="@string/welcome__select_food_from_categories"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/textViewCategories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_tiny"
                            android:text="@string/welcome__categories" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout4"
                    android:layout_gravity="left"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="5dip">

                    <TextView
                        android:id="@+id/dot3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/solid_circle"
                        android:text="3"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <com.e2esp.nestleironcalculator.views.ImageTextView
                        android:id="@+id/textViewAddFoodServings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_tiny"
                        android:text="@string/welcome__add_food_servings"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout6"
                    android:layout_gravity="left"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="5dip">

                    <TextView
                        android:id="@+id/dot4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/solid_circle"
                        android:text="4"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_tiny"
                        android:text="@string/welcome__click_on_next_category"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout8"
                    android:layout_gravity="left"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="5dip">

                    <TextView
                        android:id="@+id/dot5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/solid_circle"
                        android:text="5"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_tiny"
                        android:text="@string/welcome__click_on_calculate"
                        android:textColor="@color/black" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout9"
                android:layout_gravity="left"
                android:paddingLeft="@dimen/margin_small"
                android:paddingRight="@dimen/margin_small"
                android:paddingTop="@dimen/margin_tiny"
                android:paddingBottom="@dimen/margin_tiny"
                android:background="@color/grey"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtsmall1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/welcome__notice"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout10"
                android:layout_gravity="left"
                android:background="@color/grey"
                android:orientation="horizontal"
                android:paddingLeft="5dip">

                <TextView
                    android:id="@+id/txtsmall2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="@dimen/padding_top"
                    android:text="@string/welcome__who"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout13"
                android:layout_gravity="center"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/margin_small" >

                <Button
                    android:id="@+id/btnGo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/margin_tiny"
                    android:paddingBottom="@dimen/margin_tiny"
                    android:paddingLeft="@dimen/margin_small"
                    android:paddingRight="@dimen/margin_small"
                    android:background="@drawable/button_selector"
                    android:text="@string/welcome__try_it_now" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>