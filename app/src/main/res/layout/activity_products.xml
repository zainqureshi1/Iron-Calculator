<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/reapetbg"
        android:orientation="horizontal"
        android:tileMode="repeat"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imgbo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_weight=".3"
            android:src="@drawable/bo_breast_milk"
            android:scaleType="fitStart"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:id="@+id/childLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|right"
            android:layout_weight=".7"
            android:background="@drawable/ironbg"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:src="@drawable/banner_daily_intake"
                    android:scaleType="fitCenter"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/balllayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight=".7"
                android:orientation="vertical"
                android:weightSum="1" >

                <LinearLayout
                    android:id="@+id/ballFixedTopSpacelayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight=".2"
                    android:orientation="vertical" >

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ballArea"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight=".8"
                    android:orientation="vertical"
                    android:weightSum="1" >

                    <LinearLayout
                        android:id="@+id/ballTop"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight=".72"
                        android:orientation="vertical" />

                    <LinearLayout
                        android:id="@+id/ball"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight=".07"
                        android:background="@drawable/arrow_point"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/ballBottom"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight=".18"
                        android:orientation="vertical" >

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parentLayout"
        android:orientation="vertical"
        android:weightSum="1" >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

        </LinearLayout>

        <Spinner
            android:id="@+id/spinnerCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight=".1"
            android:spinnerMode="dropdown" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewProducts"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/spinnerCategories"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_weight=".9" />

        <LinearLayout
            android:id="@+id/layout_btns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recyclerViewProducts"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/btnNextCategory"
                android:layout_width="140dip"
                android:layout_height="16dip"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:layout_weight=".1"
                android:background="@drawable/button_next_category"
                android:text="" />

            <android.support.v4.widget.Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".8" >

            </android.support.v4.widget.Space>

            <Button
                android:id="@+id/btnCalculate"
                android:layout_width="104dip"
                android:layout_height="16dip"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:layout_weight=".1"
                android:background="@drawable/button_calculate"
                android:text="" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>