<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activities.MainActivity" >

    <LinearLayout
        android:id="@+id/parentLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/reapetbg"
        android:orientation="horizontal"
        android:weightSum="1"
        android:tileMode="repeat"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imgbo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_weight=".5"
            android:background="@drawable/bo_breast_milk"
            android:scaleType="fitStart" />

        <LinearLayout
            android:id="@+id/childLayout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom|right"
            android:layout_weight=".5"
            android:background="@drawable/ironbg"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight=".7"
                />

            <LinearLayout
                android:id="@+id/toplayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:layout_weight=".3"
                >


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/ballTop"
                    android:layout_weight=".79"
                    android:orientation="vertical"
                    />

                <LinearLayout
                    android:id="@+id/ball"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/arrow_point"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_weight=".01"/>

                <LinearLayout
                    android:id="@+id/ballBottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_weight=".2"
                    />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/parentLayout"
        android:weightSum="1">

    <Spinner
        android:id="@+id/spinnerCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight=".1"
        android:spinnerMode="dropdown"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewProducts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/spinnerCategories"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_weight=".9"
        />

        <LinearLayout
            android:id="@+id/layout_btns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/recyclerViewProducts"
            android:weightSum="1">

            <Button
                android:id="@+id/btnNextCategory"
                android:layout_width="140dip"
                android:layout_height="16dip"
                android:text=""
                android:layout_weight=".1"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:background="@drawable/button_next_category"/>

            <android.support.v4.widget.Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                >
            </android.support.v4.widget.Space>

            <Button
                android:id="@+id/btnCalculate"
                android:layout_width="104dip"
                android:layout_height="16dip"
                android:text=""
                android:layout_gravity="right"
                android:layout_weight=".1"
                android:layout_margin="5dp"
                android:background="@drawable/button_calculate"/>
        </LinearLayout>
</LinearLayout>



</RelativeLayout>